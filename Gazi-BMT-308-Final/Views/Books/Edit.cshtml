@model Gazi_BMT_308_Final.Models.Book

<h2>Kitap Düzenleme</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Title">Başlık</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Author">Yazar</label>
        <input asp-for="Author" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PublicationYear">Yayım Yılı</label>
        <input asp-for="PublicationYear" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cover">Kapak Resmi Urli</label>
        <input asp-for="Cover" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
